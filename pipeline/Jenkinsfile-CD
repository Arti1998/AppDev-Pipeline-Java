@Library('shared-library') _
pipeline {
  agent any
  environment {
    azcon = credentials('azure-pasha')
  }
  stages {
    stage('Configure Azure Credentials') {
      steps {
        powershell label:'', script: """$Env:ARM_CLIENT_ID=$azcon_CLIENT_ID"""
        powershell label:'', script: """$Env:ARM_CLIENT_SECRET=$azcon_CLIENT_SECRET"""
        powershell label:'', script: """$Env:ARM_SUBSCRIPTION_ID=$azcon_SUBSCRIPTION_ID"""
        powershell label:'', script: """$Env:ARM_TENANT_ID=$azcon_TENANT_ID"""
      }    
    }
    stage('Terraform Init') {
      steps {
        Infra().init
      }
    }
    stage('Terraform Plan') {
      steps {
        Infra().plan
      }
    }
    stage('Terraform Apply') {
      steps {
        Infra().apply
      }
    }
    
  }
}
