@Library('shared-library') _
pipeline {
  environment {
    azcon = credentials('azure-pasha')
  }
  stages {
    stage('Configure Azure Credentials') {
      steps {
        export ARM_CLIENT_ID=$azcon_CLIENT_ID
        export ARM_CLIENT_SECRET=$azcon_CLIENT_SECRET
        export ARM_SUBSCRIPTION_ID=$azcon_SUBSCRIPTION_ID
        export ARM_TENANT_ID=$azcon_TENANT_ID
      }    
    }
    stage('Terraform Init') {
      steps {
        Terraform.init()
      }
    }
    stage('Terraform Plan') {
      steps {
        Terraform.plan()
      }
    }
    stage('Terraform Apply') {
      steps {
        Terraform.Apply()
      }
    }
    stage('Download Artifact') {
      steps {
        DownloadArtifact(url)
    }
    }
     stage('Deply App to Tomcat') {
      steps {
        DeployApp()
    }
    }    
  }
}
