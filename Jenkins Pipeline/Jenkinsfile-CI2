@Library('github.com/ranjitaws2020/java-shared-library@pipeline') _
pipeline {
    agent any
    environment {
        MAVEN_OPTS = '-Xmx2g'
        //DOCKER_HUB_USER = "localdocker23"
        //DOCKER_HUB_PASSWORD = "Arati@2023"
        DOCKER_IMAGE_NAME = 'localdocker23/JavaMaven'
        DOCKER_IMAGE_TAG = 'latest'
        azcon = credentials('az_sp')
        sonarlogin = credentials('sonarqube-token')
    }
    tools {
        maven 'maven-home'
        jdk 'jdk8'
    }
    stages {
        stage('Terraform Destory') {
             steps {                
                TerraformDestroy()
             }
        }
        //stage('Provision Infrastructure') {
          //  steps {
                //Infra()
            //}
        //}
        stage('Build') {
             steps {                
                BuildApp()
             }
        }
         stage('Test') {
            steps {
                 TestApp()
            }
             post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
         stage('Sonar Analysis') {
           steps {
               SonarApp(sonarlogin)                        
           }
        }
         stage('Store war to Nexus') {
            steps{
                StoreToNexus()                
            }           
        } 
        stage('Pull the file off Nexus') {
            steps {
                DownloadFromNexus()                  
            }
        }
         stage('Fetch Public IP') {
            steps {
                FetchPublicIPOfVM()             
            }
        }
         stage('Build Docker Image') {
              steps {                        
                PushImageToDockerHub()                        
             }
         }       
       
    }
 
}
