@Library('github.com/ranjitaws2020/java-shared-library@pipeline') _

pipeline {
    agent any
    
    stages {  
        stage('Provision Infrastructure') {
            steps {
                bat label: '', script: """
                terraform -chdir=infra init -input=false
                terraform -chdir=infra plan -out=tfplan -input=false
                terraform -chdir=infra apply -input=false tfplan   
                """
            }
        }
        stage('Pull the file off Nexus') {
            steps {
                DownloadFromNexus()                  
            }
        }
        stage('Fetch Public IP') {
            environment {
                PATH = "${env.PATH};C:\\Program Files (x86)\\Microsoft SDKs\\Azure\\CLI2\\wbin"
            }
            steps {
                // fetch public IP of the VM using Azure CLI
                script {
                    bat label: '', script: '''
                    az vm list-ip-addresses --name linuxvm --resource-group app-grp --query [0].virtualMachine.network.publicIpAddresses[0].ipAddress --output tsv > public_ip.txt
                    '''
                    //def publicIp = bat label: '', returnStdout: true, script: """
                    //    az vm list-ip-addresses --name linuxvm --resource-group app-grp --query [0].virtualMachine.network.publicIpAddresses[0].ipAddress --output tsv
                    //""".trim()
                    //env.PUBLIC_IP = publicIp
                }
            }
        }
        stage('Deploy Artifact') {
            steps {
                // use sshagent to execute commands on the remote VM
               withCredentials([sshUserPrivateKey(credentialsId: 'my-ssh-credentials', keyFileVariable: 'SSH_KEY', usernameVariable: 'SSH_USER')]) {
                    sshagent(['my-ssh-credentials']) {
                        script {
                        sh 'chmod 400 ${SSH_KEY}'
                   
                        def publicIp = readFile 'public_ip.txt'
                        
                         sh '''
                            ssh -o StrictHostKeyChecking=no -i ${SSH_KEY} ${SSH_USER}@74.234.98.211 'sudo mkdir -p /temp && sudo chmod -R 777 /temp'
                            scp -o StrictHostKeyChecking=no -i ${SSH_KEY} dockerfile ${SSH_USER}@74.234.98.211:/temp/
                            scp -o StrictHostKeyChecking=no -i ${SSH_KEY} JavaMaven.war ${SSH_USER}@74.234.98.211:/temp/
                         '''
                    
                        sh '''
                              ssh -o StrictHostKeyChecking=no -i ${SSH_KEY} ${SSH_USER}@74.234.98.211 'cd /temp && docker build -t javasampletomcat:latest .'
                              ssh -o StrictHostKeyChecking=no -i ${SSH_KEY} ${SSH_USER}@74.234.98.211 'docker save javasampletomcat:latest | docker load'
                              ssh -o StrictHostKeyChecking=no -i ${SSH_KEY} ${SSH_USER}@74.234.98.211 'docker run -d --name HelloWorld -p 8280:80 javasampletomcat:latest'
                        '''
                        }
                    }
                }
            }
        }
    }
}
