@Library('github.com/ranjitaws2020/java-shared-library@pipeline') _
pipeline {
    agent any
    environment {
        MAVEN_OPTS = '-Xmx2g'
        DOCKER_IMAGE_NAME = 'localdocker23/JavaMaven'
        DOCKER_IMAGE_TAG = 'latest'
        azcon = credentials('az_sp')
        sonarlogin = credentials('sonarqube-token')
    }
    tools {
        maven 'maven-home'
        jdk 'jdk8'
    }
    stages {     
        stage('Provision / Destroy Infrastructure') {
            steps {
                Infra()
                //TerraformDestroy()
            }
        }
        stage('Build') {
             steps {                
                BuildApp()
             }
        }
         stage('Test') {
            steps {
                 TestApp()
            }
             post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
         stage('Sonar Analysis') {
           steps {
               SonarApp(sonarlogin)                        
           }
        }
         stage('Store war to Nexus') {
            steps{
                StoreToNexus()                
            }           
        } 
         stage('Fetch Public IP') {
            steps {
                FetchPublicIPOfVM()             
            }
        }
         stage('Build Docker Image') {
              steps {                        
                PushImageToDockerHub()                        
             }
         }       
       
    }
 
}
